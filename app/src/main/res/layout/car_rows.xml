<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/textView_brand"
        android:gravity="center"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/textView_model"
        android:layout_toRightOf="@+id/textView_brand"
        android:gravity="center"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/textView_matr"
        android:layout_toRightOf="@+id/textView_model"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/check"
        app:srcCompat="@drawable/ic_check"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/textView_matr"
        android:gravity="center"
        android:visibility="gone"
        />
</RelativeLayout>